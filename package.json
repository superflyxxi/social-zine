{
  "name": "social-zine",
  "description": "Social Network Magazine",
  "scripts": {
    "xo": "xo **/src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/superflyxxi/social-zine.git"
  },
  "author": "SuperFlyXXI <superflyxxi@yahoo.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/superflyxxi/social-zine/issues"
  },
  "homepage": "https://github.com/superflyxxi/social-zine#readme",
  "devDependencies": {
    "@semantic-release/exec": "^7.1.0",
    "semantic-release": "^24.2.9",
    "xo": "^1.2.2"
  },
  "xo":{
	"ignores":[],
	"prettier": true,
	"rules":{
		"unicorn/prevent-abbreviations":[
			"error",
			{
				"replacements":{
					"res": false,
					"req": false,
					"i": false,
					"dir": false,
					"docs": false
				}
			}
		],
		"new-cap":[
			"error",
			{
				"capIsNewExceptions":[
					"Router"
				]
			}
		],
		"guard-for-in":["off"],
		"max-depth":["error", 5]
	}
  }
}
